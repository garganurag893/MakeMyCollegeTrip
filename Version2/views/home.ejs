<% locs.forEach(function(loc){ %>
    <div class="bgimg-2" style="background-image: url('<%= loc.img %>');">
       <div class="container">
         <header class="jumbotron">
           <h1 style="color:black;text-align:center;text-shadow: 2px 2px ;"><%= loc.name %></h1>
           <h3 style="color:black;text-shadow: 2px 2px ;"> Package price : Rs.<%= loc.cost %></h3>
           <h3 style="color:black;text-shadow: 2px 2px ;"> Currently enrolled Students : <%= loc.count %></h3>
          <h3 style="color:black;text-shadow: 2px 2px ;"> Date Of Departure : <%= loc.dept %></h3>
         </header>
       </div>
       <div style="color:black;text-align:center;padding:50px 80px;text-align:justify;">
          <h2><%= loc.desc1 %></h2>
          <h2><%= loc.desc2 %></h2>
          <h2><%= loc.desc3 %></h2>
          <h2><%= loc.desc4 %></h2>
          <h2><%= loc.desc5 %></h2>
          <h2><%= loc.desc6 %></h2>
      </div>
      
    </div>
<% }) %>
